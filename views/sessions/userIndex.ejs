    <nav class="navbar navbar-expand-lg navbar-light">

      <a class="navbar-brand" href="/" id="header-title"><h1>Health<span id="trax">TRAX</span></h1></a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <h1 id="user-welcome">Welcome, <%=currentUser.username%>!</h1>

        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/sessions/user/<%=currentUser._id%>/newdoctor">Add New Doctor</a>
          </li>
        </ul>
        <form action="/sessions?_method=DELETE" method="POST" class="form-inline my-2 my-lg-0">
          <input type="submit" value="Logout" class="form-control mr-sm-2"/>
        </form>
      </div>
    </nav>

    <!-- want to go through user doctor array and show the doctors names -->
    <div class="doc-heading">
      <h4 class="doc-header"><i class="fas fa-user-md"></i>Your Doctors</h4>
    </div>

    <div class="all-doctors">
      <% for(let i = 0; i< currentUser.doctors.length; i++) { %>
        <div class="doctor">
          <div class="doc-content1">
            <h3 class="doc-info"> <%=currentUser.doctors[i].name%></h3>
          </div>
          <div class="doc-content2">
            <h3 class="doc-info"> <%=currentUser.doctors[i].type%></h3>
          </div>
          <div class="more-details-doc">
            <a href="/sessions/doctor/<%=currentUser._id%>/<%=currentUser.doctors[i]._id%>" id="details">View Details</a>

          </div>
        </div>
      <% } %>
    </div>

    <!-- Optional JavaScript FOR BOOTSTRAP -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
